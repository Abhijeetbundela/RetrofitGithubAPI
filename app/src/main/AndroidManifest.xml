<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.retrofitgithubapi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.kotlin.RepositoriesActivityKt"></activity>
        <activity android:name=".activities.kotlin.UserActivityKt" />
        <activity android:name=".activities.kotlin.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.java.RepositoriesActivity" />
        <activity android:name=".activities.java.UserActivity" />
        <activity android:name=".activities.java.LogInActivity" />
    </application>

</manifest>